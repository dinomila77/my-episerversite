@using EPiServer
@using EPiServer.Core
@using EPiServer.ServiceLocation

@{
    var contentLoader = ServiceLocator.Current.GetInstance<IContentLoader>();
    var childPages = contentLoader.GetChildren<PageData>(ContentReference.StartPage).Where(page => page.VisibleInMenu).OrderBy(date => date.Created);
}
@foreach (var childPage in childPages)
{
    <li>
        <a href="@Url.ContentUrl(childPage.ContentLink)">@childPage.Name</a>
    </li>
}