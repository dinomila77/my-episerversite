@model MyEpiserverSite.Models.ViewModels.UserDetailsViewModel

@using (Ajax.BeginForm("UserDetails", "UserBlock", new AjaxOptions { HttpMethod = "post", UpdateTargetId = "newUserForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h4>@Html.Translate("instruction")</h4>

        @Html.ValidationSummary(false, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.Label(Html.Translate("firstname"), new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FirstName, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Html.Translate("lastname"), new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LastName, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Html.Translate("address"), new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Address, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Html.Translate("zipcode"), new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ZipCode, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Html.Translate("city"), new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.City, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Html.Translate("phonenumber"), new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PhoneNumber, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Previous" name="btnPrev" class="btn btn-default"/>
                <input type="submit" value="Save" name="btnSave" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
